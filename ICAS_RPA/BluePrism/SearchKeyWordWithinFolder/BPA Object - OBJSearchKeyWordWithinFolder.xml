  <stage stageid="521c5d8d-4d80-4b13-a8b8-a13b65342319" name="Code for FileNames having Keyword" type="Code">
    <subsheetid>25b70dc9-c02e-46df-8b93-9f25de8f83de</subsheetid>
    <loginhibit />
    <display x="60" y="-45" w="180" h="30" />
    <inputs>
      <input type="text" name="sourceFolder" expr="[folderName]" />
      <input type="text" name="keyWord" expr="[keyword]" />
    </inputs>
    <outputs>
      <output type="text" name="stringFiles" stage="stringOfFiles" />
    </outputs>
    <onsuccess>65a96d9b-0d91-422e-9e99-02d6b29a8183</onsuccess>
    <code><![CDATA[try
{
	List<string> allFiles = new List<string>();
	List<string> filesListWithKeyword = new List<string>();
	
	AddFiles.AddFileNamesToList(sourceFolder, allFiles);
	foreach (string fileName in allFiles)
	{
		string contents = File.ReadAllText(fileName);
		if (contents.Contains(keyWord))
		{
			filesListWithKeyword.Add(fileName);
		}	
	}
	
	stringFiles = string.Join( ",", filesListWithKeyword);
}

catch (Exception ex)
{
	throw ex.InnerException;
}]]></code>
